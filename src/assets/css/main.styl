@import url(https://fonts.googleapis.com/css?family=Raleway:700,100,400)

body
  background-color: #333333
  font-family: 'Raleway', sans-serif

/* Sections */
.section
  padding: 8rem 0 7rem
  text-align: center

.section-sub-heading
  font-size:16px
  color: #555555
  font-weight: lighter

.section-heading,
.section-description
  margin-bottom: 1.2rem

/* top section */
.top
  background-image: url('../img/top.jpg')
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  background-attachment: fixed
  color: #fff
  padding-bottom: 5rem

.top-image
  margin-top:-2rem

.top-description
  color: #CCCCCC

/* About Me*/
.about-me
  background-color: #FFFFFF
  border-bottom: 1px solid #ddd

.about-me-description
  text-align: justify


/* Clients */
.clients
  background-color: #EFEFEF
  border-bottom: 1px solid #ddd

.client-image
    filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale")
    filter: gray
    -webkit-filter: grayscale(90%)
    -webkit-transition: all .6s ease
    -webkit-backface-visibility: hidden
    height: 125px
    cursor: pointer

.client-image:hover
    filter: none
    -webkit-filter: grayscale(0%)

/* Clients */
.my-work
  background-color: #FFFFFF
  border-bottom: 1px solid #ddd

/* Expertise */
.expertise
  background-color: #EFEFEF
  border-bottom: 1px solid #DDDDDD

.expertise-head
  font-size: 20px
  font-weight: bold

.expertise-sub-head
  font-size: 14px
  color:#333333

/* Testimonials */
.testimonials
  background-color: #FFFFFF
  border-bottom: 1px solid #ddd


/* contact */
.contact-me
  background-color: #EFEFEF
  border-bottom: 1px solid #ddd

.me-img
  width: 70%

.txtarea
  height: 170px

/* navigation */
.navigation
  right: 15px
  font-size: 12px
  padding: 8px
  padding-top: 15px
  position: absolute
  list-style-type: none
  li
    display: inline-block
    padding-left: 10px
    padding-right: 10px
    cursor: pointer
    color: #FFFFFF
    &:hover
      color: #CCCCCC

.navigation-down
  opacity: 0
  font-size: 16px
  padding: 6px 4px 0px 5px
  position: fixed
  display: inline
  list-style-type: none
  background: #EFEFEF
  box-shadow:0px 2px 2px #CCCCCC
  z-index:100
  border-bottom: solid #b0b0b0 1px
  li
    color: #878787
    display: inline-block
    padding-left: 10px
    padding-right: 10px
    cursor: pointer

.navigation-down-transition
   transition: opacity .50s ease-in-out
   opacity: .90


/* footer */
.footer
  color: #B1AFAF

/* supporting style options */
.hidden
  display: none

.anchored, .pointer
    cursor: pointer

.button
  border-radius: 4px

li
  position: relative
  color: #000
  text-decoration: none

.navigation > li:before,
.navigation-down > li:before
  content: ""
  position: absolute
  width: 100%
  height: 2px
  bottom: 0
  left: 0
  background-color: #FFFFFF
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)
  -webkit-transition: all 0.3s ease-in-out 0s
  transition: all 0.3s ease-in-out 0s

.navigation-down > li:before
  background-color: #000000

.navigation > li:hover:before,
.navigation-down > li:hover:before
  visibility: visible
  -webkit-transform: scaleX(1)
  transform: scaleX(1)

.do-pulse
    -webkit-animation: pulsate 2s ease-out
    -webkit-animation-iteration-count: infinite

@-webkit-keyframes pulsate
    0% {-webkit-transform: scale(0.8, 0.8)}
    50% {-webkit-transform: scale(1.3, 1.3)}
    100% {-webkit-transform: scale(0.8, 0.8)}

.fa-6x
  font-size: 150px

.break
  height: 50px

.sub-section
    padding: 10rem 0 10rem !important

.text-align-center
    text-align: center !important
    display: block
    width: 100%

.text-align-right
    text-align: right !important
    display: block
    width: 100%

.fadeInBlock
  opacity: 0

.tv
  position: relative
  padding-top: 25px
  padding-bottom: 67.5%
  height: 0
  video
    box-sizing: border-box
    background: url('../img/tv.jpg') center center no-repeat
    background-size: contain
    padding: 1.0% 8.5% 14.8%
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%


