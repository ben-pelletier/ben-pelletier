}
/* contact */
.contact-me{
  background-color: #EFEFEF;
  border-bottom: 1px solid #ddd;
}
.anchored{
  cursor: pointer;
}
.me-img{
    width: 70%;
}
.txtarea{
    height: 170px;
}
/* navigation */
.navigation{
  right:15px;
  font-size: 12px;
  padding: 8px;
  padding-top:15px;
  position: absolute;
  list-style-type: none;
}
.navigation li{
  display: inline-block;
  padding-left:10px;
  padding-right:10px;
  cursor: pointer;
  color: #FFFFFF;
}
.navigation li:hover{
  color:#CCCCCC;
}
.navigation-down{
  opacity: 0;
  font-size: 16px;
  padding: 6px 4px 0px 5px ;
  position: fixed;
  display: inline;
  list-style-type: none;
  background: #EFEFEF;
  box-shadow:0px 2px 2px #CCCCCC;

  z-index:100;
  border-bottom: solid #b0b0b0 1px;
}
.navigation-down li{
  color:#878787;
  display: inline-block;
  padding-left: 10px;
  padding-right: 10px;
  cursor: pointer;
}
.navigation-down-transition{
   transition: opacity .50s ease-in-out;
   opacity: .90;
}

/* footer */
.footer{
      color: #B1AFAF;
}

/* supporting style options */
li {
  position: relative;
  color: #000;
  text-decoration: none;
}
.navigation > li:before,
.navigation-down > li:before  {
  content: "";
  position: absolute;
  width: 100%;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: #FFFFFF;
  visibility: hidden;
  -webkit-transform: scaleX(0);
  transform: scaleX(0);
  -webkit-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.navigation-down > li:before {
  background-color: #000000;
}
.navigation > li:hover:before,
.navigation-down > li:hover:before {
  visibility: visible;
  -webkit-transform: scaleX(1);
  transform: scaleX(1);
}
.do-pulse{
    -webkit-animation: pulsate 2s ease-out;
    -webkit-animation-iteration-count: infinite;
}
@-webkit-keyframes pulsate {
    0% {-webkit-transform: scale(0.8, 0.8);}
    50% {-webkit-transform: scale(1.3, 1.3);}
    100% {-webkit-transform: scale(0.8, 0.8);}
}
.fa-6x{
  font-size: 150px;
}
.break{
  height: 50px;
}
.sub-section{
    padding: 10rem 0 10rem !important;
}
.text-align-center {
    text-align: center !important;
    display: block;
    width: 100%;
}
.text-align-right {
    text-align: right !important;
    display: block;
    width: 100%;
}
.fadeInBlock{
  opacity: 0;
}
.tv{
  position: relative;
  padding-top: 25px;
  padding-bottom: 67.5%;
  height: 0;
}
.tv video {
    box-sizing: border-box;
    background: url(http://ben-pelletier.com/images/tv.jpg) center center no-repeat;
    background-size: contain;
    padding: 1.0% 8.5% 14.8%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

/* Smaller than 550 */
@media (max-width: 550px) {
  .top-image{
    margin-top:-2rem;
    height: 125px;
  }
  .navigation, .navigation-down{
    display: none;
  }


}

/* Bigger than 550 */
@media (min-width: 550px) {
  .section {
    padding: 12rem 0 11rem;
  }
  .hero {
    padding-bottom: 12rem;
    text-align: left;
    height: 165px;
  }
  .hero-heading {
    font-size: 2.4rem;
  }
  .top-image{
    margin-top:0rem;
  }
}

/* Bigger than 750 */
@media (min-width: 750px) {
  .hero {
    height: 190px;
  }
  .hero-heading {
    font-size: 2.6rem;
  }
  .section {
    padding: 14rem 0 15rem;
  }
  .hero {
    padding: 16rem 0 14rem;
  }

  .categories {
    padding: 20rem 0 8rem;
  }
}

/* Bigger than 1000 */
@media (min-width: 1000px) {
  .section {
    padding: 20rem 0 10rem;
  }
  .hero {
    padding: 22rem 0;
  }
  .hero-heading {
    font-size: 3.0rem;
  }
  .top-image{
    margin-top:-5rem;
  }
}
